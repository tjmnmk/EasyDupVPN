[Unit]
Description=EasyDupVPN - UDP VPN with packet duplication
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /opt/easydupvpn/easydupvpn.py /etc/easydupvpn/config.json
Restart=always
RestartSec=5

# Security hardening
NoNewPrivileges=no
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
ReadWritePaths=/dev/net/tun

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=easydupvpn

[Install]
WantedBy=multi-user.target
